<%- [@resourcelinks].flatten.compact.each do |resourcelink| -%>
  <%- resourcelink.each_pair do |attrib, value| %>
    <%- if attrib == resourcelink.keys.first -%>
    <ResourceLink <%= attrib %>=<%= "#{value}".encode(:xml => :attr) -%>
    <%- else -%>
                  <%= attrib %>=<%= "#{value}".encode(:xml => :attr) -%>
    <%- end -%>
  <%- end %> />
<%- end -%>
