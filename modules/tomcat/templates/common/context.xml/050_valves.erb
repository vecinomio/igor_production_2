<%- [@valves].flatten.compact.each do |valve| -%>
  <%- valve.each_pair do |attrib, value| %>
    <%- if attrib == valve.keys.first -%>
    <Valve <%= attrib %>=<%= "#{value}".encode(:xml => :attr) -%>
    <%- else -%>
           <%= attrib %>=<%= "#{value}".encode(:xml => :attr) -%>
    <%- end -%>
  <%- end %> />
<%- end -%>
